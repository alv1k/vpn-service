services:
  amneziawg:
    image: ghcr.io/imbtqd/amnezia-wg-easy:latest
    container_name: amneziawg
    network_mode: host
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
    devices:
      - /dev/net/tun:/dev/net/tun
#    sysctls:
#      - net.ipv4.ip_forward=1
#      - net.ipv4.conf.all.src_valid_mark=1
    environment:
      - PASSWORD=vtnfvjhajp03    # для веб-UI
      - WG_HOST=91.132.161.112   # публичный IP сервера
      - WG_PORT=51888                # UDP порт
      - PORT=51821                   # TCP веб-интерфейс

      - WG_DEFAULT_ADDRESS=91.132.161.112
      - WG_DEFAULT_DNS=1.1.1.1,8.8.8.8
      - WG_ALLOWED_IPS=0.0.0.0/0
      - WG_NETWORK=10.10.0.0/24
      - DNS=1.1.1.1
      - WG_MTU=1280
      - WG_PERSISTENT_KEEPALIVE=25
      - MAX_CLIENTS=256
    # ports:
    #   - "51888:51888/udp"
    #   - "51821:51821/tcp"
    restart: unless-stopped
    volumes:
      - ./config:/etc/wireguard
      # - ./amneziawg-data:/app/data

  mysql:
    image: mysql:8.0
    container_name: vpn_mysql
    environment:
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
      MYSQL_DATABASE: vpn
      MYSQL_USER: ${MYSQL_USER}
      MYSQL_PASSWORD: ${MYSQL_PASSWORD}
    ports:
      - "127.0.0.1:3306:3306"
    volumes:
      - mysql_data:/var/lib/mysql
      - ../database/mysql-init:/docker-entrypoint-initdb.d
    restart: unless-stopped
    command: --default-authentication-plugin=mysql_native_password

  phpmyadmin:
    image: phpmyadmin:latest
    container_name: phpmyadmin
    environment:
      PMA_HOST: mysql
      PMA_PORT: 3306
      PMA_USER: root
      PMA_PASSWORD: ${MYSQL_ROOT_PASSWORD}
      UPLOAD_LIMIT: 50M
    ports:
      - "127.0.0.1:8080:80"
    depends_on:
      - mysql
    restart: unless-stopped

  redis:
    image: redis:7-alpine
    container_name: vpn_redis
    ports:
      - "127.0.0.1:6379:6379"
    restart: unless-stopped
    volumes:
      - redis_data:/data
    command: redis-server --appendonly yes

volumes:
  mysql_data:
  redis_data:
  amneziawg-data:
